{
  "dashboardId": "dashboard-id",
  "dataSettings": {
    "dataURL": "https://raw.githubusercontent.com/UNDP-Data/dv-health-investment-case-data-repo/refs/heads/main/map.csv"
  },
  "dashboardLayout": {
    "rows": [
      {
        "height": 1000,
        "columns": [
          {
            "graphType": "choroplethMap",
            "columnWidth": 1,
            "dataSelectionOptions": [
              {
                "label": "Select focus area",
                "ui": "select",
                "allowedColumnIds": [
                  {
                    "value": "NCD",
                    "label": "NCD"
                  },
                  {
                    "value": "Tobacco Control",
                    "label": "Tobacco Control"
                  },
                  {
                    "value": "Health Tax",
                    "label": "Health Tax"
                  },
                  {
                    "value": "Mental Health",
                    "label": "Mental Health"
                  },

                  {
                    "value": "Air Pollution",
                    "label": "Air Pollution"
                  },
                  {
                    "value": "Physical Activity",
                    "label": "Physical Activity"
                  },
                  {
                    "value": "Road Safety",
                    "label": "Road Safety"
                  }
                ],
                "chartConfigId": "x"
              }
            ],
            "graphDataConfiguration": [
              {
                "chartConfigId": "countryCode",
                "columnId": "ISO3"
              },
              {
                "chartConfigId": "x",
                "columnId": "All"
              }
            ],
            "settings": {
              "domain": [2, 3, 4, 5],
              "tooltip": "<h6>{{data.data['Official Country Name']}}</h6><br><b>Focus Areas:</b> {{data.data['Focus Area']}}<br><b>Total number:</b> {{data.data.All}}",
              "colorLegendTitle": "Total number of Investment Cases"
            }
          }
        ]
      }
    ]
  }
}
